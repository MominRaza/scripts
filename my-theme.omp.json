{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "template": " \ufdfd  ",
          "style": "powerline",
          "foreground": "white",
          "background": "magenta"
        },
        {
          "options": {
            "home_icon": "~",
            "style": "full"
          },
          "template": " {{ .Path }} ",
          "foreground": "lightWhite",
          "powerline_symbol": "\ue0b0",
          "background": "blue",
          "type": "path",
          "style": "powerline"
        },
        {
          "options": {
            "branch_icon": "\ue725 ",
            "branch_identical_icon": "",
            "fetch_status": true,
            "tag_icon": "\uF412 "
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "background": "green",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightRed{{ end }}",
            "{{ if gt .Behind 0 }}magenta{{ end }}",
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if gt .Ahead 0 }}cyan{{ end }}"
          ]
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
